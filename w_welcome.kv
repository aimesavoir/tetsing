MDScreen:
    name: 'welcome' 
    md_bg_color: '#ECF8F9'
    
    MDCard:
        
        md_bg_color: '#F3E99F'  #'#212A3E'
        size_hint: 0.9,0.85
        pos_hint: {'center_x':0.5 , 'center_y':0.5 }
        elevation:2
    Image:  
        source: 'logo.png'
        size_hint: 0.5,0.5
        pos_hint:{'center_x': 0.5, 'center_y': 0.85}
    
    MDRoundFlatButton:
        id: enter
        text: 'Enter'  
        size_hint: 0.3,0.06
        pos_hint:{'center_x': 0.5, 'center_y': 0.15}  
