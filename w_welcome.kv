        line_color: '#A6D0DD'
        text_color: '#212A3E'
        on_release: app.screenmanage()
 
    MDTextField:
        id: comboens
        hint_text: "Enseignement"
        size_hint_x: 0.7
        helper_text: 'Double Tape pour Choisir'
        pos_hint : {'center_x': 0.5, 'top': 0.75}
        multiline: False
        icon_right: 'chevron-down'
        color_mode: 'custom'
        line_color_focus: '#C21010' 
        line_color_normal: '#A6D0DD' 
        text_color:'#A6D0DD' 
        color_mode: 'accent'
        on_double_tap: app.comboens()


    MDTextField:
        id: comboniv
        hint_text: "Niveau"
        size_hint_x: 0.7
        helper_text: 'Double Tape pour Choisir'
        pos_hint : {'center_x': 0.5, 'top': 0.65}
